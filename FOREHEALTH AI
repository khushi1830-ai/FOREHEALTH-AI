function analyze() {
  const data = {
    sleep: Number(document.getElementById("sleep").value),
    activity: Number(document.getElementById("activity").value),
    diet: document.getElementById("diet").value,
    stress: Number(document.getElementById("stress").value),
    smoking: document.getElementById("smoking").value
  };

  fetch("https://YOUR-BACKEND-URL/analyze", {
    method: "POST",
    headers: {"Content-Type": "application/json"},
    body: JSON.stringify(data)
  })
  .then(res => res.json())
  .then(result => {
    document.getElementById("result").innerHTML = `
      <h3>Overall Health Risk: ${result.overall_risk}%</h3>
      <p><b>Diabetes Risk:</b> ${result.diabetes}%</p>
      <p><b>Cardiac Risk:</b> ${result.cardiac}%</p>
      <p><b>Advice:</b> ${result.advice}</p>
    `;
  });
}
from flask import Flask, request, jsonify
from flask_cors import CORS

app = Flask(__name__)
CORS(app)

@app.route("/analyze", methods=["POST"])
def analyze():
    data = request.json

    risk = 0

    if data["sleep"] < 6:
        risk += 15
    if data["activity"] < 30:
        risk += 20
    if data["diet"] == "junk":
        risk += 15
    if data["stress"] > 6:
        risk += 20
    if data["smoking"] == "yes":
        risk += 30

    diabetes = min(risk + 10, 100)
    cardiac = min(risk + 20, 100)

    advice = "Improve sleep, exercise regularly, manage stress, and maintain a balanced diet."

    return jsonify({
        "overall_risk": min(risk, 100),
        "diabetes": diabetes,
        "cardiac": cardiac,
        "advice": advice
    })

if __name__ == "__main__":
    app.run()
